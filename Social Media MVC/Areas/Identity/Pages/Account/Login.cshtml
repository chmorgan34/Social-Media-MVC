@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div style="width: 25rem">
            <h3 class="text-center">Login</h3>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-2">
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-secondary border-secondary"><i class="fas fa-user"></i></span>
                        <input asp-for="Input.Username" class="form-control bg-dark text-white border-secondary" placeholder="Username" />
                    </div>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <div class="input-group">
                        <span class="input-group-text bg-dark text-secondary border-secondary"><i class="fas fa-lock"></i></span>
                        <input asp-for="Input.Password" class="form-control bg-dark text-white border-secondary" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
