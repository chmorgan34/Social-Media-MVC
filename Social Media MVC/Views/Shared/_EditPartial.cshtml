@model Entry 

<div class="d-none" id="edit_@Model.Id">
    <textarea class="bg-dark text-white border border-secondary textInput w-100"
              rows="4" placeholder="What are your thoughts?">@Model.Content</textarea>
    <br />

    <button class="btn btn-outline-danger btn-sm" type="button" onclick="cancelEdit(this)"
            data-id="@Model.Id">
        <i class="fas fa-ban me-1"></i> Cancel
    </button>
    <button type="button" class="btn btn-outline-primary btn-sm" onclick="saveEdit(this)"
            data-id="@Model.Id" data-url="@Url.Action("Edit", "Entries")">
        <i class="fas fa-save me-1"></i> Save changes
    </button>
</div>
