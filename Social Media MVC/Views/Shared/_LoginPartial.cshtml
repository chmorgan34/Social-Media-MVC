@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav nav-pills">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">@User.Identity.Name</a>
            <ul class="dropdown-menu dropdown-menu-dark">
                <li><a class="dropdown-item" asp-controller="Users" asp-action="Authored">My stuff</a></li>
                <li><a class="dropdown-item" asp-controller="Users" asp-action="Saved">Saved</a></li>
                <li><a class="dropdown-item" asp-controller="Users" asp-action="Hidden">Hidden</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Settings</a></li>
            </ul>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                <button type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" aria-current="false" id="nav-register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" aria-current="false" id="nav-login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
