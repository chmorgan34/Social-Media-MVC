<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-dark text-white">
    <header>
        <nav class="navbar navbar-expand-md fixed-top navbar-dark border-bottom border-secondary"
             id="mainNav">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index" asp-route-sort="Hot">Social Media MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-md-inline-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav nav-pills">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="false" id="nav-hot" asp-controller="Home" asp-action="Index" asp-route-sort="Hot">
                                <i class="fab fa-hotjar me-1"></i> Hot
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="false" id="nav-new" asp-controller="Home" asp-action="Index" asp-route-sort="New">
                                <i class="fas fa-clock me-1"></i> New
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="false" id="nav-controversial" asp-controller="Home" asp-action="Index" asp-route-sort="Controversial">
                                <i class="fas fa-bolt me-1"></i> Controversial
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="false" id="nav-top" asp-controller="Home" asp-action="Index" asp-route-sort="Top">
                                <i class="fas fa-arrow-up me-1"></i> Top
                            </a>
                        </li>
                    </ul>
                    <div class="flex-grow-1 d-flex ms-5 me-5">
                        <a asp-controller="Posts" asp-action="Create" class="btn btn-success me-2" role="button"
                           title="Submit a new post">
                            <i class="fas fa-plus"></i>
                        </a>
                        <form asp-controller="Home" asp-action="Search" method="get" class="flex-grow-1">
                            <div class="input-group">
                                <input class="form-control bg-dark text-white border-secondary" type="search" placeholder="Search"
                                       name="query" id="navSearch" />
                                <button class="btn btn-outline-success" type="submit" title="Search">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top border-secondary text-secondary">
        <div class="container">
            <small>&copy; 2021 - Charles Morgan</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-timeago/jquery.timeago.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
